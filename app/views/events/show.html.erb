<!-- app/views/events/show.html.erb -->
<div class="container">
  <h1><%= @event.name %></h1>
  <p>Date: <%= @event.date.strftime('%B %d, %Y') %></p>
  <p>Location: <%= @event.location %></p>

  <% if @attendees.any? %>
    <h3>Attendees:</h3>
    <ul>
      <% @attendees.each do |attendee| %>
        <li><%= attendee.email %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No attendees yet.</p>
  <% end %>
</div>
